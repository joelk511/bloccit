<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown_to_html @post.body %></p>
 </div>
 
 <div class="col-md-4">
	<% if policy(@post).edit? %>
	<%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
	<% end %>
</div>
</div>

<div class="row">
<h2>Comments</h2>
<%= render @post.comments %>
 
<% if policy(@post.comments).create? %> 
<h4>Add a comment:</h4>
<%= render 'comments/form' %>
<% end %>

	   
